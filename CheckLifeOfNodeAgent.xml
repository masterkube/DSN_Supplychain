<?xml version="1.0" encoding="UTF-8"?>
<Agent>
	<AgentName>CheckLifeOfNodeAgent</AgentName>
    <Compose>
        <Tell><action><actionName>LifeofNode</actionName></action><internal>true</internal></Tell>
        <Decision> 
            <Expression>LifeofNode&gt;0</Expression>
            <TrueEvent>
                <Tell><action><actionName>StartDecision</actionName></action><internal>true</internal></Tell>
            </TrueEvent>
            <FalseEvent>
                <Tell><action><actionName>DoNothing</actionName></action><internal>true</internal></Tell>
            </FalseEvent>
        </Decision>
        <Choice>
            <ChoiceOption>
                <Ask><action><actionName>StartDecision</actionName></action><internal>true</internal></Ask>
                <OptionAction>
                    <Compose>
                        <AgentCommand><AgentName>VelocityDecisionAgent</AgentName></AgentCommand>
                    </Compose>
                </OptionAction>
            </ChoiceOption>
            <ChoiceOption>
                <Ask><action><actionName>DoNothing</actionName></action><internal>true</internal></Ask>
                <OptionAction>
                    <Compose>
                        <Tell><action><actionName>AddHeartBeat</actionName></action></Tell>
                        <Sequence>
                            <Ask><action><actionName>RunDecision</actionName></action><internal>true</internal></Ask>
                            <Compose>
                                <Ask><action><actionName>AddHeartBeat</actionName></action><internal>true</internal></Ask>
                                <AgentCommand><AgentName>CheckLifeOfNodeAgent</AgentName></AgentCommand>
                            </Compose>
                        </Sequence>
                    </Compose>
                </OptionAction>
            </ChoiceOption>
        </Choice>
    </Compose>
</Agent>