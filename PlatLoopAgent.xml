<?xml version="1.0" encoding="UTF-8"?>
<Agent>
	<AgentName>PlatLoopAgent</AgentName>
	<Choice>
		<ChoiceOption>
            <Ask><action><actionName>PickPlant</actionName></action><internal>true</internal></Ask>
			<OptionAction>
				<Compose>
                    <Tell><action><actionName>SharedPlantInfo</actionName></action><internal>true</internal></Tell>    
                    <Tell><action><actionName>AddInventory</actionName></action><internal>true</internal></Tell>
                    <Sequence>
                        <AgentCommand><AgentName>PlantInventoryAgent</AgentName>
                            <Ask><action><actionName>AddInventory</actionName></action><internal>true</internal></Ask>
                        </AgentCommand>
                        <Tell><action><actionName>InventoryInPlant</actionName></action><internal>true</internal></Tell>    
                        <AgentCommand><AgentName>PlatLoopAgent</AgentName></AgentCommand>
                    </Sequence>
                </Compose>
			</OptionAction>
		</ChoiceOption>
    </Choice>
</Agent>